            "type": "string",
            "required": true
        },
        "startDate": {
            "type": "datetime",
            "required": true
        },
        "endDate": {
            "type": "datetime"
        },
        "category": {
            "type": "enumeration",
            "required": true,
            "enum": [
                "sport",
                "social",
                "formation",
                "autre"
            ]
        },
        "maxParticipants": {
            "type": "integer"
        },
        "isPublic": {
            "type": "boolean",
            "default": true
        }
