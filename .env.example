############################
# Server Configuration
############################

NODE_ENV=development
HOST=0.0.0.0
PORT=1337
URL=http://localhost:1337

############################
# Database Configuration
############################

# Option 1: Use a single DATABASE_URL (recommended for production)
# DATABASE_URL=postgresql://user:password@host:5432/database_name

# Option 2: Use individual connection parameters
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=strapi
DATABASE_SSL=false

############################
# Strapi Security Keys
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('base64'))"
############################

APP_KEYS=key1,key2,key3,key4
API_TOKEN_SALT=your-api-token-salt
ADMIN_JWT_SECRET=your-admin-jwt-secret
TRANSFER_TOKEN_SALT=your-transfer-token-salt
ENCRYPTION_KEY=your-encryption-key
JWT_SECRET=your-jwt-secret

############################
# ProConnect OAuth (AgentConnect)
# https://agentconnect.gouv.fr/
############################

PROCONNECT_DOMAIN=auth.agentconnect.gouv.fr
PROCONNECT_CLIENT_ID=your-client-id
PROCONNECT_CLIENT_SECRET=your-client-secret
PROCONNECT_SCOPES=openid profile email
OIDC_EXPECTED_ALG=RS256
PROCONNECT_REDIRECT_URI_HTTPS=https://your-domain.com/api/auth/proconnect/callback
POST_LOGOUT_REDIRECT_URI=https://your-domain.com/post-logout

############################
# Firebase Configuration
# Get from Firebase Console > Project Settings > Service Accounts
############################

FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

############################
# N8N Webhook Integration
############################

N8N_WEBHOOK_URL=http://n8n:5678/webhook
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret
N8N_API_SECRET=your-n8n-api-secret

############################
# S3 Storage (Clever Cloud Cellar / AWS S3)
############################

S3_ENDPOINT=https://cellar-c2.services.clever-cloud.com
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true
S3_BUCKET=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key-id
S3_ACCESS_SECRET=your-secret-access-key
S3_ACL=public-read

############################
# Cron Jobs
############################

# Enable Strapi cron tasks (auto-complete reservations, cleanup, etc.)
CRON_ENABLED=true

############################
# Optional: Admin Configuration
############################

# ADMIN_PATH=/admin
# STRAPI_ADMIN_BACKEND_URL=https://your-domain.com
