{
  "kind": "collectionType",
  "collectionName": "moderation_reports",
  "info": {
    "singularName": "moderation-report",
    "pluralName": "moderation-reports",
    "displayName": "Moderation Report",
    "description": "Signalements de contenu pour mod√©ration"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "targetType": {
      "type": "enumeration",
      "enum": ["announcement", "carpool"],
      "required": true
    },
    "targetId": {
      "type": "string",
      "required": true
    },
    "reporter": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "reason": {
      "type": "text",
      "maxLength": 500
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "kept", "removed", "dismissed"],
      "default": "pending",
      "required": true
    },
    "moderator": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "resolvedAt": {
      "type": "datetime"
    }
  }
}

