{
  "kind": "collectionType",
  "collectionName": "carpool_passengers",
  "info": {
    "singularName": "carpool-passenger",
    "pluralName": "carpool-passengers",
    "displayName": "CarpoolPassenger",
    "description": "Table de liaison pour les passagers de covoiturage avec statuts"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "carpool": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::carpool.carpool",
      "required": true
    },
    "passenger": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "accepted",
        "rejected",
        "waitlist"
      ]
    }
  }
}
