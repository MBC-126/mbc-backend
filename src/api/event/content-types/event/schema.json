{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Événements à venir sur la base"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "location": {
      "type": "string",
      "maxLength": 200,
      "required": false
    },
    "description": {
      "type": "text",
      "required": false
    },
    "date": {
      "type": "date",
      "required": true
    },
    "time": {
      "type": "string",
      "maxLength": 20,
      "required": false
    },
    "isRecurring": {
      "type": "boolean",
      "default": false
    },
    "recurrencePattern": {
      "type": "enumeration",
      "required": false,
      "enum": [
        "daily",
        "weekly",
        "monthly"
      ]
    },
    "recurrenceEndDate": {
      "type": "date",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "isRecurring"
            },
            false
          ]
        }
      },
      "required": false
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
